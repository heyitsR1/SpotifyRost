@model IEnumerable<SpotifyRoast.Models.Roast>

@{
    ViewData["Title"] = "My Roast History";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>@ViewData["Title"]</h1>
        <a asp-action="NewRoast" class="btn btn-primary">
            <i class="bi bi-fire"></i> Get Roasted
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center" role="alert">
            <h4 class="alert-heading">No roasts yet!</h4>
            <p>You haven't been roasted yet. Are you afraid?</p>
            <hr>
            <p class="mb-0">Click the button above to start.</p>
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 g-4">
            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <div class="card-header d-flex justify-content-between">
                            <span class="badge bg-secondary">@item.Personality?.Name</span>
                            <small class="text-muted">@item.CreatedAt.ToShortDateString()</small>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">Link: <a href="@item.SpotifyLink" target="_blank" class="text-decoration-none">Spotify</a></h5>
                            <p class="card-text fst-italic">"@item.RoastContent"</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
