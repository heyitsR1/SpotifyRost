@model SpotifyRoast.Models.RoastPersonality

@{
    ViewData["Title"] = "Delete Roast Personality";
}

<div class="container mt-4">
    <h2>Delete Roast Personality</h2>
    
    <div class="alert alert-danger" role="alert">
        <h4 class="alert-heading">Are you sure you want to delete this?</h4>
        <p>This action will mark the personality as deleted but might preserve existing roasts depending on the application rules.</p>
    </div>

    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-3 fw-bold">Name</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>
            
            <dt class="col-sm-3 fw-bold">Icon</dt>
            <dd class="col-sm-9 fs-3">@Html.DisplayFor(model => model.Icon)</dd>
            
            <dt class="col-sm-3 fw-bold">System Prompt</dt>
            <dd class="col-sm-9">
                <div class="p-3 bg-light rounded border">
                    @Html.DisplayFor(model => model.SystemPrompt)
                </div>
            </dd>
        </dl>
        
        <form asp-action="Delete" class="mt-4">
            <input type="hidden" asp-for="Id" />
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            <input type="submit" value="Delete Permanently" class="btn btn-danger ms-2" />
        </form>
    </div>
</div>
