@model IEnumerable<SpotifyRoast.Models.RoastPersonality>

@{
    ViewData["Title"] = "Roast Personalities";
}

<div class="d-flex justify-content-between align-items-center mt-4 mb-4">
    <h1>Roast Personalities</h1>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</div>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>Icon</th>
            <th>Name</th>
            <th>System Prompt</th>
            <th class="text-end">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td style="font-size: 1.5rem;">@item.Icon</td>
                <td class="fw-bold">@item.Name</td>
                <td>
                    <div class="text-truncate" style="max-width: 400px;" title="@item.SystemPrompt">
                        @item.SystemPrompt
                    </div>
                </td>
                <td class="text-end">
                    <div class="btn-group" role="group">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
