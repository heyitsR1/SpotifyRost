@{
    ViewData["Title"] = "Spotify Roast";
    var personalities = ViewBag.Personalities as List<SpotifyRoast.Models.RoastPersonality>;
}

<div class="text-center mt-5">
    <h1 class="display-4 fw-bold mb-3">Get Roasted by AI 🔥</h1>
    <p class="lead text-muted mb-5">Drop a public Spotify Playlist link below and let our AI judge your terrible music taste.</p>

    <div class="card shadow-sm mx-auto" style="max-width: 600px; border-radius: 1rems;">
        <div class="card-body p-4">
            
            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger" role="alert">
                    @ViewBag.Error
                </div>
            }

            <form asp-controller="Home" asp-action="GenerateRoast" method="post" id="roastForm">
                <div class="mb-4 text-start">
                    <label for="spotifyPlaylistUrl" class="form-label fw-bold">Spotify Playlist URL</label>
                    <input type="url" class="form-control form-control-lg" id="spotifyPlaylistUrl" name="spotifyPlaylistUrl" 
                           placeholder="https://open.spotify.com/playlist/..." required>
                </div>

                <div class="mb-4 text-start">
                    <label for="personalityId" class="form-label fw-bold">Choose your Roaster</label>
                    <select class="form-select form-select-lg" id="personalityId" name="personalityId" required>
                        <option value="" disabled selected>Select a Roast Personality...</option>
                        @if (personalities != null)
                        {
                            foreach (var p in personalities)
                            {
                                <option value="@p.Id">@p.Name</option>
                            }
                        }
                    </select>
                </div>

                <button type="submit" class="btn btn-dark btn-lg w-100 fw-bold" id="roastBtn">
                    <span id="btnText">Roast Me <i class="bi bi-fire"></i></span>
                    <span id="btnSpinner" class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
                </button>
            </form>
        </div>
    </div>

    @if (ViewBag.Roast != null)
    {
        <div class="card shadow-lg mx-auto mt-5 border-0" style="max-width: 800px; background-color: #f8f9fa;">
            <div class="card-body p-5">
                <h4 class="text-uppercase text-muted fw-bold mb-4">@ViewBag.SelectedPersonalityName Says:</h4>
                <p class="fs-5" style="white-space: pre-wrap;">@ViewBag.Roast</p>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        document.getElementById('roastForm').addEventListener('submit', function() {
            document.getElementById('btnText').textContent = 'Analyzing your terrible taste...';
            document.getElementById('btnSpinner').classList.remove('d-none');
            document.getElementById('roastBtn').disabled = true;
        });
    </script>
}
